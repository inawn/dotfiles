!! Caps_Lock と Control_L と Shift_L
remove Lock = Caps_Lock
remove Control = Control_L
keysym Caps_Lock = Control_L
keysym Control_L = Shift_L
add Control = Control_L
add Lock = Caps_Lock

! 無変換キーをShiftに
clear shift
keycode 102 = Shift_R
add shift = Shift_L Shift_R
! 変換キーをShiftに
clear shift
keycode 100 = Shift_R
add shift = Shift_L Shift_R
! Kanaを変換キーに
